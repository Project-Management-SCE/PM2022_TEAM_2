<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3B533">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="6"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="The term 'Finance' refers to financial activities that support the lives of individuals, businesses, and governments. Some of those activities include banking, borrowing, saving, and investing. Finance also refers to the study of money and financial tools that are part of a country's financial system."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>